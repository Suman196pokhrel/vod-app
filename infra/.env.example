# ================================
# LOCAL DEVELOPMENT ENVIRONMENT
# ================================
# Use this file for running the VOD app locally in Docker containers
# Copy this to .env in your project root

# JWT Configuration
JWT_SECRET_KEY=local_dev_secret_key_change_me_12345678
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Frontend URL (local development)
FRONTEND_URL=http://localhost:3000

# Email Configuration
# Note: Using your production Resend key - emails will actually send
# To disable emails in local dev, comment this out or use a test key
RESEND_API_KEY=
FROM_EMAIL=

# ================================
# POSTGRES DATABASE
# ================================
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=vod_db
POSTGRES_DB_PORT=5432
# Note: 'postgres' is the Docker service name from docker-compose.yml
DATABASE_URL=postgresql+psycopg2://USER:PASSWORD@postgres:5432/DB

# ================================
# PGADMIN (Database Management UI)
# ================================
# Access at: http://localhost:5050
PGADMIN_DEFAULT_EMAIL=admin@local.com
PGADMIN_DEFAULT_PASSWORD=admin

# ================================
# REDIS CACHE/MESSAGE BROKER
# ================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ================================
# CELERY (Task Queue)
# ================================
CELERY_BROKER_URL=redis://:PASSWORD@redis:6379/0
CELERY_RESULT_BACKEND=redis://:PASSWORD@redis:6379/1

# ================================
# MINIO (S3-Compatible Object Storage)
# ================================
# Access Console at: http://localhost:9001
# API Endpoint: http://localhost:9000
MINIO_ENDPOINT=minio:9000
MINIO_ROOT_USER=
MINIO_ROOT_PASSWORD=

MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_SECURE=false

# MinIO Buckets
MINIO_BUCKET_VIDEOS=vod-videos
MINIO_BUCKET_THUMBNAILS=vod-thumbnails
MINIO_BUCKET_PROCESSED_VIDEOS=vod-processed-videos

# ================================
# FFMPEG PROCESSING
# ================================
# Adjust threads based on your local machine (2-4 is good for most laptops)
FFMPEG_THREADS=4